# genera regions.json con slug y etiqueta
import json, os
from pathlib import Path

root = Path("docs/data")  # ajusta si tu salida va a docs/data
items = []
for p in sorted(root.glob("region=*")):
    slug = p.name.replace("region=","")
    # etiqueta “bonita” desde el slug
    label = slug.replace("-", " ").title().replace("De La", "de la").replace("Y De", "y de").replace("Del", "del")
    items.append({"slug": slug, "label": label})

with open(root.parent / "regions.json", "w", encoding="utf-8") as f:
    json.dump(items, f, ensure_ascii=False, indent=2)
